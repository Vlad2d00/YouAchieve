<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/tasksFragment">

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.example.youachieve.TasksFragment"
        android:label="fragment_tasks"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/tasksFragment_to_messagesFragment"
            app:destination="@+id/messagesFragment"/>
        <action
            android:id="@+id/tasksFragment_to_NewsFragment"
            app:destination="@+id/NewsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.youachieve.MessengerFragment"
        android:label="fragment_messages"
        tools:layout="@layout/fragment_messenger">
        <action
            android:id="@+id/messagesFragment_to_tasksFragment"
            app:destination="@+id/tasksFragment"/>
        <action
            android:id="@+id/messagesFragment_to_NewsFragment"
            app:destination="@+id/NewsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.youachieve.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/newsFragment_to_tasksFragment"
            app:destination="@+id/tasksFragment"/>
        <action
            android:id="@+id/newsFragment_to_messagesFragment"
            app:destination="@+id/messagesFragment"/>
    </fragment>

    <fragment
        android:id="@+id/projectsFragment"
        android:name="com.example.youachieve.ProjectsFragment"
        android:label="fragment_projects"
        tools:layout="@layout/fragment_projects" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.youachieve.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />
    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.youachieve.PostDetailFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post_detail" />
</navigation>